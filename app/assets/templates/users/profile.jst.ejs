<% if (GoodSees.currentUser == user.id) {%>

  <section class="profile-main group">
    <h1><%=   user.escape('username') %></h1>
    <ul class="profile-info">
      <li class="name">
        <label>Name:<%= user.escape('name') %></label>
        <input class="hidden" type="text" name="user[name]" value="<%= user.escape('name') %>">
      </li>
      <li class="email">Email:<%= user.escape('email') %></li>
      <li class="location">
        <label>Location: <%= user.escape('location') %></label>
        <input class="hidden edit-loc" type="text" name="location" value="<%= user.escape('location') %>">
      </li>
      <li class="bday">
        <label>Birth Date: <%= user.escape('birth_date') %></label>
        <input class="hidden edit-bday" type="date" name="birth_date" value="<%= user.escape('birth_date') %>">
      </li>
    </ul>
  </section>

    <section class="profile-bio">
      <h3>Bio:</h3>
      <p class="profile-bio">
        <%= user.escape('bio') %>
      </p>
      <textarea class="hidden" name="birth_date" rows="8" cols="40"><%= user.escape('bio') %></textarea>
    </section>


    <section class="profile-reel">
      Featured Reel: <%= reel.escape('name') %>
      <ul class="films-list group">
      </ul>
      <a href="#/users/films/<%= user.id %>">See all of <%= user.escape('username')%>'s films!'</a>
    </section>

<% } else { %>

  <section class="profile-main group">
    <h1><%=   user.escape('username') %></h1>
    <ul class="profile-info">
      <li class="name">Name:<%= user.escape('name') %></li>
      <li>Email:<%= user.escape('email') %></li>
      <li>Location: <%= user.escape('location') %></li>
      <li>Birth Date: <%=   user.escape('birth_date') %></li>
    </ul>
  </section>

    <section class="profile-bio">
      <h3>Bio</h3>
      <p class="profile-bio">
        <%= user.escape('bio') %>
      </p>
    </section>


    <section class="profile-reel">
      Featured Reel: <%= reel.escape('name') %>
      <ul class="films-list group">
      </ul>
      <a href="#/users/films/<%= user.id %>">See all of <%= user.escape('username')%>'s films!'</a>
      </section>


<% } %>
