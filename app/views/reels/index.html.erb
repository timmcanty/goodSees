


<ul class="reels-list">
  <% @reels.each do |reel| %>
    <li><%= reel.name %>
      <% if reel.custom %>
        <%=button_to "Delete Reel", reel_url(reel.id), method: :delete %>
      <% end %>
      <ul>
        <% reel.films.each do |film| %>
        <li><%= link_to film.title, film_url(film.id) %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

<h4>Create a New Reel</h4>
<form id="form_id" action="<%= reels_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="">Reel Name</label><br>
  <input type="text" name="name" value="">
  <input type="submit" name="submit" value="Submit">
</form>
