
<section>
  <h1><%= @user.username %></h1>

  <ul>
    <li>Name: <%= @user.name %></li>
    <li>Email: <%= @user.email %></li>
    <li>Location: <%= @user.location %></li>
    <li>Birth Date: <%= @user.birth_date %></li>
  </ul>

  <content class="featured-reel">
    <h4>Featured Reel</h4>
    <%= render 'reels/show', reel: Reel.find(@user.featured_id) %>
  </content>

  <p> Bio: <%= @user.bio %>

  </p>

  <% if current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_url(@user.id) %>
    <% end %>
</section>
